 <div class="header pure-u-1">
        <div class="pure-menu pure-menu-open pure-menu-fixed pure-menu-horizontal">
            <a class="pure-menu-heading" href="/">DnsGit</a>

            <ul>
                <li <%if (navigation === '') {%>class="pure-menu-selected"<%}%>><a href="/">Home</a></li>
                <li><a href="https://github.com/zewenzhang/dnsgit/blob/master/README.md" target="_blank">Docs</a></li>
                <li><a href="https://github.com/zewenzhang/dnsgit-demo" target="_blank">GitHub Demo</a></li>
                <% if (user) { %>
                <li <%if (navigation === 'github') {%>class="pure-menu-selected"<%}%> ><a href="<%= github_login_url %>">Create GitHub Repo</a></li>
              <% } %>
            </ul>
            <ul class="profile">
              <% if (user) { %>
                <li class="dropdown">
                  <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= user.name %> <b class="caret"></b></a>
                </li>
                <li><a href="/logout">Logout</a></li>
              <% } else { %>
                <li>
                  <a href="<%= dnspod_login_url %>">Login With DNSPod</a>
                </li>
              <% } %>
            </ul>
        </div>
    </div>

